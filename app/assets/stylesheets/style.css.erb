@import url('https://fonts.googleapis.com/css2?family=Oswald:wght@500&family=Quicksand:wght@300;400&display=swap');

/* reset */
*,
*::before,
*::after {
  box-sizing: border-box;
}

body,
h1,
h2,
h3,
h4,
p, 
section,
article {
  margin: 0;
  padding: 0;
}

img {
  max-width: 100%;
  display: block;
}

button {
  font-family: inherit;
}

body {
  min-height: 100vh;
  text-rendering: optimizeSpeed;
  line-height: 1.5;
}

html:focus-within {
  scroll-behavior: smooth;
}

a:not([class]) {
  text-decoration-skip-ink: auto;
}

@media (prefers-reduced-motion: reduce) {
  html:focus-within {
   scroll-behavior: auto;
  }
  
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}
/* end reset */

:root {
  --text: rgb(51, 75, 72);
  --select-border: var(--text);
  --select-focus: rgba(4,126,128,1);
  --select-arrow: var(--select-border);
  --background-100: rgba(251, 250, 245, 0.7);
  --accent: rgba(2, 202, 201, 0.5);
  --accent-opaque: rgba(2, 202, 201, 0.9);
}

body {
  font-family: 'Quicksand', sans-serif;
  padding: 2vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
  background-image: url(<%= asset_path 'szabo-viktor-28ZbKOWiZfs-unsplash.jpg' %>);
  background-size: cover;
  color: var(--text);
}

h1, h2, h3, h4 {
  font-family: 'Oswald', sans-serif;
}

.logo { 
  height: 3rem;
  filter: invert(22%) sepia(46%) saturate(282%) hue-rotate(123deg) brightness(98%) contrast(85%);
}

.title__wrapper {
  display: flex;
}

.flash {
  text-align: center;
}

select {
  appearance: none;
  background-color: transparent;
  border: none;
  padding: 0 1em 0 0;
  margin: 0;
  width: 100%;
  font-family: inherit;
  font-size: inherit;
  cursor: inherit;
  line-height: inherit;
  outline: none;
}

.select {
  width: 100%;
  min-width: 15ch;
  border: 1px solid var(--select-border);
  border-radius: 0.25em;
  padding: 0.25em 0.5em;
  font-size: 1.25rem;
  cursor: pointer;
  line-height: 1.1;
  background-color: transparent;
  display: grid;
  grid-template-areas: "select";
  align-items: center;
  position: relative;
}

.select::after {
  content: "";
  width: 0.8em;
  height: 0.5em;
  background-color: var(--select-arrow);
  clip-path: polygon(100% 0%, 0 0%, 50% 100%);
  justify-self: end;
}

select,
.select:after {
  grid-area: select;
}

select:focus + .focus {
  position: absolute;
  top: -1px;
  left: -1px;
  right: -1px;
  bottom: -1px;
  border: 2px solid var(--select-focus);
  border-radius: inherit;
}

input[type="text"] {
  border: 1px solid var(--select-border);
  border-radius: 0.25em;
  padding: 0.25em 0.5em;
  font-size: 1.25rem;
  background-color: transparent;
  outline: none;
}

input[type="text"]:focus {
  border: 2px solid var(--select-focus);
}

input[type="submit"],
.button {
  border: 1px solid var(--select-border);
  border-radius: 0.25em;
  padding: 0.25em 0.5em;
  font-size: 1.25rem;
  background-color: transparent;
  text-transform: lowercase;
  font-weight: 300;
  cursor: pointer;
}

input[type="submit"]:focus, input[type="submit"]:hover,
.button:focus, .button:hover {
  background-color: var(--accent);
  border: 1px solid transparent;
}

.button {
  text-align: center;
}

form {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.flights {
  border: 1px solid var(--select-border);
  border-radius: 0.25em;
  padding: 1rem 0.5rem;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.flight__selection {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.page__wrapper {
  display: grid;
  grid-template-columns: minmax(300px, max-content);
  justify-content: center;
  gap: 1rem;
  background-color: var(--background-100);
  border-radius: 0.25em;
  padding: 1rem;
}

h4 {
  text-transform: lowercase;
}

input[type="radio"] {
  appearance: none;
  width: 0.9rem;
  height: 0.9rem;
  outline: 1px solid var(--accent-opaque);
  border-radius: 50%;
  background-color: transparent;
}

input[type="radio"]:checked {
  background-color: var(--accent-opaque);
}

input[type="radio"]:hover {
  cursor: pointer;
}

.radio__wrapper {
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.flight-info__wrapper, .passengers-info__wrapper {
  border: 1px solid var(--select-border);
  border-radius: 0.25em;
  padding: 1em;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

a {
  text-decoration: none;
  color: inherit;
}

.passenger__fields {
  display: flex;
  flex-direction: column;
  margin-bottom: 0.5rem;
}