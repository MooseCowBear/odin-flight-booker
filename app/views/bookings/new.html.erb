<%= form_with model: @booking, remote: true do |form| %>
  <%= form.hidden_field :flight_id, value: @flight.id %>
  <% @num.times do |i| %>
    <%= fields_for 'passenger'+[i].to_s do |passenger_builder| %>
      <%= passenger_builder.label :name, "Name:" %>
      <%= passenger_builder.text_field :name %>
     
      <%= passenger_builder.label :email, "Email:" %>
      <%= passenger_builder.text_field :email %>
    <% end %>
  <% end %>
  <%= form.submit "Submit", :name => nil %>
<% end %>