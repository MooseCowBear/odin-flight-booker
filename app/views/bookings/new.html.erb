<h1>Book It</h1>
<p>You have chosen:
  <span><%= "#{@flight.departing_from.code} - #{@flight.arriving_at.code} on #{@flight.time_formatted}" %></span>
</p>

<h3><%= @num %></h3>

<%= form_with url: "/bookings/new" do |f| %>
  <h4>Passenger Info</h4>
    <%= f.hidden_field :flight_id, value: @flight.id %>
  
    <div>
      <%= @num.times do |i| %>
        <%= f.fields_for :passenger do |passenger_builder| %>
              <%= passenger_builder.label :name, "Name:" %>
              <%= passenger_builder.text_field :name %>
       
              <%= passenger_builder.label :email, "Email:" %>
              <%= passenger_builder.text_field :email %>
        <% end %>
      <% end %>
    </div>
  
  <%= submit_tag "Book it", :name => nil %>
<% end %>

